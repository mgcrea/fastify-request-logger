{
  "name": "@mgcrea/fastify-request-logger",
  "version": "1.9.0",
  "description": "Compact request logger plugin for fastify written in TypeScript",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/fastify-request-logger",
  "license": "MIT",
  "access": "public",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vitest --watch --pool=forks --reporter=verbose",
    "build": "tsup src/index.ts --format cjs,esm --sourcemap --dts --clean",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "prettify": "prettier --write src/ test/",
    "typecheck": "tsc --noEmit",
    "spec": "rimraf node_modules/.vitest; vitest --run --pool=forks --no-isolate",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fastify",
    "request",
    "logger"
  ],
  "devDependencies": {
    "@mgcrea/eslint-config-node": "^0.12.12",
    "@tsconfig/node-lts": "^20.1.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.16.12",
    "eslint": "^9.12.0",
    "fastify": "^5.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "kolorist": "^1.8.0"
  }
}
